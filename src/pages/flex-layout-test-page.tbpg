#page flex-layout-test
title="Flex Layout Test"
menu-id="main"
orientationReload=true

#content
    <simple-label text="The page-id is $navInfo.pageId"/>

    <scroll-view height="100%">

    <simple-label text="flex row nowrap, full width"/>
