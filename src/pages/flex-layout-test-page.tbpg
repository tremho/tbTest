    <simple-label class="flexItem" text="One"/>
    <simple-label class="flexItem" text="Two"/>
    <simple-label class="flexItem" text="Three"/>
    <simple-label class="flexItem" text="Four"/>
    <simple-label class="flexItem" text="Five"/>
