#page file-test
title = "File API Tests"
menu-id = "main"

#content
    <simple-label text="The page-id is $navInfo.pageId"/>

    <scroll-view orientation="horizontal" width="800" height="100%">
    <scroll-view height="100%">
    <fill-space height="1rem"/>
    <simple-label text="App Path = $$appPath"/>
    <fill-space height="1rem"/>

    <simple-label text="file exists (existing) $$exist1"/>
    <simple-label text="file exists (non-existing) $$exist2"/>

    <fill-space height="1rem"/>
    <simple-label text="read text $$readText"/>
    <fill-space height="1rem"/>
    <simple-label text="write text $$writeText"/>
    <simple-label text="read written text $$writeTextVerify"/>
    <fill-space height="1rem"/>
    <simple-label text="write binary image $$writeBinary"/>
    <simple-label text="read binary image $$readBinary"/>
    <fill-space height="1rem"/>
    <simple-label text="deleted file $$delete"/>
    <simple-label text="renamed file $$rename"/>
    <simple-label text="moved file $$move"/>
    <fill-space height="1rem"/>
    <simple-label text="copied file $$copy"/>
    <fill-space height="1rem"/>
    <text-area text="tested Stats: $$stats"/>
    <fill-space height="1rem"/>
    <simple-label text="made folder tree: $$mkdir"/>
    <simple-label text="$$mkdir2"/>
    <simple-label text="$$mkdir3"/>
    <fill-space height="1rem"/>
    <scroll-view height="100px">
        <text-area text="$$readFolder"/>
    </scroll-view>
    <fill-space height="1rem"/>
    <simple-label text="$$rmdir"/>
    <simple-label text="$$rmdir2"/>
    </scroll-view> <!-- v -->
    <fill-space height="2cm"/>
    </scroll-view> <!-- h -->

